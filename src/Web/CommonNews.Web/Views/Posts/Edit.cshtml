@using CommonNews.Web.ViewModels.Post
@model PostFormViewModel

@{
    ViewBag.Title = "Edit " + Model.Post.Title;
}

<h2>Edit Post</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading row">
                <div class="col-md-12"></div>
            </div>
            <div class="panel-body row">
                <div class="col-md-12 edit-post-form">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Post.Id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Post.Title, htmlAttributes: new { @class = "control-label" })
                                <br />
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.Post.Title, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Post.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Post.Content, htmlAttributes: new { @class = "control-label" })
                                <br />
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.Post.Content, 8, 80, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Post.Content, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Post.Category, htmlAttributes: new { @class = "control-label" })
                                <br />
                                <div class="col-md-12">
                                    @Html.DropDownListFor(model => model.Post.Category.Id, new SelectList(Model.Categories, "Id", "Name"), "Select Category", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Post.Category, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Post.ImageUrl, htmlAttributes: new { @class = "control-label" })
                                <br />
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.Post.ImageUrl, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Post.ImageUrl, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                    <hr />
                    <div>
                        @*@Html.ActionLink("Back to List", "Index")*@
                        <a href="/myposts">Back to List</a>
                    </div>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }

                </div>
            </div>
        </div>
    </div>
</div>