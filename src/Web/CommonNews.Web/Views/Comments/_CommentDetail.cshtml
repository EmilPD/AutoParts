@model CommonNews.Web.ViewModels.Comment.CommentViewModel

<div class="media">
    <div class="media-body">
        <h4 class="media-heading">
            <span class="post-author">Posted by: @Model.AuthorUsername</span>
            <span class="post-commented-on">@Html.DisplayFor(model => model.CommentedOn)</span>
        </h4>
        <p>@Model.Content</p>
    </div>
</div>
<hr />